extends layout

block container
    
    h1(style="color:crimson;") Historial

    - if(productos.length > 0)

        div(class="table-responsive")
            table(class="table table-dark")
                tr(style="color: blueviolet;")
                    th Nombre
                    th Precio
                    th Foto
                
                - for (const producto of productos)
                    tr
                        td=producto.nombre
                        td=producto.precio
                        td
                            img(src=producto.url height="80")
    - else 
        h3(class="alert alert-danger") no se encontraron datos

    a(class="btn btn-danger mt-3 mb-5" href="/") Ir al Formulario





