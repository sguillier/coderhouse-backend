<h2 style="color:crimson;">Historial</h2>

    <% if(productos.length > 0){ %>


        <div class="table-responsive">
            <table class="table table-dark">
                <tr style="color: blueviolet;">
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Foto</th>
                </tr>
                <% for (const producto of productos) {%>
                    <tr>
                        <td>
                            <%=producto.nombre%>
                        </td>
                        <td>
                            <%=producto.precio%>
                        </td>
                        <td>
                            <img src=<%=producto.url%> height="80" >
                        </td>
                    </tr>
                    <%};%>
            </table>
        </div>

    <% } else { %>
        <h3 class="alert alert-danger">no se encontraron datos</h3>
    <% } %>

    <a class="btn btn-danger mt-3 mb-5" href="/"> Ir al Formulario </a>