<h1 style="color:crimson;">Historial</h1>

{{#if productos }}
<div class="table-responsive">
    <table class="table table-dark">
        <tr style="color: blueviolet;">
            <th>Nombre</th>
            <th>Precio</th>
            <th>Foto</th>
        </tr>
        {{#each productos}}
        <tr>
            <td>
                {{this.nombre}}
            </td>
            <td>
                {{this.precio}}
            </td>
            <td>
                <img src={{this.url}} height="80">
            </td>
        </tr>
        {{/each}}
    </table>
</div>
{{else}}
<h3 class="alert alert-danger">no se encontraron datos</h3>
{{/if}}

<a class="btn btn-danger mt-3 mb-5" href="/"> Ir al Formulario </a>